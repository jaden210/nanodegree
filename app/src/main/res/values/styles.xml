<resources>

    <!-- Base application theme. -->
    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="button" parent="android:Widget.Button">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/build</item>
        <item name="android:layout_below">@+id/textView</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/b_color</item>
        <item name="android:shadowColor">@color/button_shadow</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

</resources>
